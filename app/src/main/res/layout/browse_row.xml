<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    tools:context="com.civilien.app.BrowseActivity"
    android:focusable="false"
    android:paddingRight="10dp"
    android:paddingLeft="0dp">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/icondot"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_ID"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="Incident ID"
        android:layout_alignTop="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_Title"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Incident Title"
        android:layout_below="@+id/text_ID"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_toEndOf="@+id/imageView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_GPSLat"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="GPSLat"
        android:layout_above="@+id/text_GPSLon"
        android:layout_alignLeft="@+id/text_Title"
        android:layout_alignStart="@+id/text_Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_PostDate"
        android:textSize="10dp"
        android:textStyle="bold"
        android:text="PostDate"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_GPSLon"
        android:textSize="10sp"
        android:textStyle="bold"
        android:text="GPSLon"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/text_GPSLat"
        android:layout_alignStart="@+id/text_GPSLat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_User"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="User"
        android:layout_above="@+id/text_Title"
        android:layout_alignRight="@+id/text_PostDate"
        android:layout_alignEnd="@+id/text_PostDate" />


</RelativeLayout>