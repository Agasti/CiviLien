<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".HomeScreen"
    android:background="#ffffff">

    <GridLayout
        android:id="@+id/menuGrid"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="80dp">

        <Button
            android:padding="25dp"
            android:layout_width="125dp"
            android:text="Map"
            android:id="@+id/mapButton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:visibility="gone" />

        <Button
            android:layout_width="125dp"
            android:text="Browse"
            android:id="@+id/browseButton"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="25dp"
            android:layout_margin="10dp"
            android:visibility="gone" />

        <Button
            android:padding="25dp"
            android:layout_width="125dp"
            android:text="CiviMates"
            android:id="@+id/matesButton"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:visibility="gone" />

        <Button
            android:padding="25dp"
            android:layout_width="125dp"
            android:text="Messages"
            android:id="@+id/messagesButton"
            android:layout_row="1"
            android:layout_margin="10dp"
            android:layout_column="1"
            android:visibility="gone" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Map"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/asset_menu_map"
            android:background="@null"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Browse"
            android:src="@drawable/asset_browse_icon"
            android:layout_below="@+id/menuGrid"
            android:layout_centerHorizontal="true"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="See on Map"
            android:id="@+id/textView"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Browse List"
            android:id="@+id/textView2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp" />

    </GridLayout>

</RelativeLayout>
